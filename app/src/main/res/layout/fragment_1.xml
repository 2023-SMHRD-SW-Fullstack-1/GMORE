<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2DB6DAF6"
    tools:context=".fragment.Fragment1">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="피파 온라인4"
        app:layout_constraintEnd_toEndOf="@+id/ivFIFA4"
        app:layout_constraintStart_toStartOf="@+id/ivFIFA4"
        app:layout_constraintTop_toBottomOf="@+id/ivFIFA4" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="배틀그라운드"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="리그오브레전드"
        app:layout_constraintEnd_toEndOf="@+id/ivLOL"
        app:layout_constraintStart_toStartOf="@+id/ivLOL"
        app:layout_constraintTop_toBottomOf="@+id/ivLOL" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="메이플스토리"
        app:layout_constraintEnd_toEndOf="@+id/ivMaplestory"
        app:layout_constraintStart_toStartOf="@+id/ivMaplestory"
        app:layout_constraintTop_toBottomOf="@+id/ivMaplestory" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="오버워치"
        app:layout_constraintEnd_toEndOf="@+id/ivOverwatch"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/ivOverwatch"
        app:layout_constraintTop_toBottomOf="@+id/ivOverwatch" />

    <ImageView
        android:id="@+id/ivMaplestory"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="40dp"
        android:tag="메이플스토리"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintStart_toEndOf="@+id/ivOverwatch"
        app:layout_constraintTop_toTopOf="@+id/ivLOL"
        app:srcCompat="@drawable/maplestory" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="로스트아크"
        app:layout_constraintEnd_toEndOf="@+id/ivLostArk"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/ivLostArk"
        app:layout_constraintTop_toBottomOf="@+id/ivLostArk" />

    <ImageView
        android:id="@+id/your_image_view"
        android:layout_width="0dp"
        android:layout_height="107dp"
        android:layout_marginBottom="12dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cirby" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.59" />

    <ImageView
        android:id="@+id/ivLOL"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/lolimg"
        android:tag="리그오브레전드"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline11" />

    <ImageView
        android:id="@+id/ivFIFA4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/fimg"
        android:tag="피파온라인4"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/ivLostArk"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/rimg"
        android:tag="로스트아크"
        app:layout_constraintStart_toEndOf="@+id/ivFIFA4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/ivBattleGround"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/bgimg"
        android:tag="배틀그라운드"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintStart_toEndOf="@+id/ivLostArk"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageView
        android:id="@+id/ivOverwatch"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/overwatch"
        android:tag="오버워치"
        app:layout_constraintStart_toEndOf="@+id/ivLOL"
        app:layout_constraintTop_toTopOf="@+id/ivLOL" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="428dp"
        android:layout_height="236dp"
        android:src="@drawable/bg"
        app:layout_constraintBottom_toTopOf="@+id/your_image_view"
        app:layout_constraintEnd_toStartOf="@+id/guideline8"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>