<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/crMyBoard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#EBF7FF">

    <ImageView
        android:id="@+id/imgMyBoard"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img14" />

    <TextView
        android:id="@+id/tvTitleMyBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/main"
        android:maxLength="10"
        android:text="글제목"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgMyBoard"
        app:layout_constraintEnd_toStartOf="@+id/tvDateMyBoard"
        app:layout_constraintStart_toEndOf="@+id/imgMyBoard"
        app:layout_constraintTop_toTopOf="@+id/imgMyBoard"
        app:layout_constraintVertical_bias="0.48000002" />

    <TextView
        android:id="@+id/tvDateMyBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="작성일"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitleMyBoard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitleMyBoard"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>